@model IEnumerable<bibliotecaModel.ModelFuncionario>


@{
    if (Session["Funclogado"] != null)
    {
        Layout = "~/Views/Shared/_LayoutFunc.cshtml";
    }

}

<h2>Listar usuario</h2>

<p>
    @Html.ActionLink("Adicionar novo Funcionario", "Cadastrar")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.id_func)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nome_func)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CPF_func)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tel_func)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id_func)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nome_func)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CPF_func)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tel_func)
            </td>
            <td>
                @Html.ActionLink("Editar", "Atualizar", new { Id = item.id_func }) |
                @Html.ActionLink("Detalhes", "Detalhes", new { Id = item.id_func }) |
                @Html.ActionLink("Excluir", "ExcluirFunc", new { id = item.id_func }, new { onclick = "return confirm('Deseja excluir?');" })
            </td>
        </tr>
    }

</table>


