@model IEnumerable<bibliotecaModel.ModelRacas>

@{
    if (Session["Funclogado"] != null)
    {
        Layout = "~/Views/Shared/_LayoutFunc.cshtml";
    }

}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="./assets/css/lista1.css">
    <link rel="stylesheet" href="~/assets/css/header-funcionario.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
    <title>Lista Pet</title>

</head>
<body>
    <main>
        <h1 class="titulo-tabela" style="margin-top:100px;">Lista de Raças</h1>
        <p>
            @Html.ActionLink("Adicionar", "Cadastrar", new { area = "" }, new { @class = "add-cart-lista" })
        </p>
        <div style="overflow-x: auto;">
            <table class="col table table-striped table-responsive table-bordered table-sm" style="margin-bottom: 300px; width: 461px">

                <thead>
                    <tr>
                        <th scope="col">ID </th>
                        <th scope="col" width="240px">Nome</th>

                        <th scope="col">tipo animal</th>

                        <th scope="col">Botão</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>
                                @Html.DisplayFor(modelItem => item.id_raca)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.nome_raca)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.tipo_animal)
                            </td>

                            <td>
                                @Html.ActionLink("Excluir", "ExcluirRaca", new { id = item.id_raca }, new { @class = "add-cart-lista", onclick = "return confirm('Deseja excluir?');", style = "margin-right:10px;" })
                            </td>
                        </tr>
                    }


                </tbody>
            </table>
        </div>
    </main>



</body>
</html>