@model IEnumerable<bibliotecaModel.ModelProduto>

@{
    if (Session["Funclogado"] != null)
    {
        Layout = "~/Views/Shared/_LayoutFunc.cshtml";
    }

}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/assets/css/lista1.css">
    <link rel="stylesheet" href="~/assets/css/header-funcionario.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
    <title>Lista Pet</title>

</head>
<body>
    <main>
        <h1 class="titulo-tabela">Lista de Produtos</h1>
        <p>
            @Html.ActionLink("Adicionar", "Cadastrar", new { area = "" }, new { @class = "add-cart-lista" })
        </p>
        <div style="overflow-x: auto;">
            <table class="col table table-striped table-responsive table-bordered table-sm" style="margin-bottom: 300px; width:866px">
                <thead>
                    <tr>
                        <th scope="col">ID </th>
                        <th scope="col">Nome</th>
                        <th scope="col">Preço</th>
                        <th scope="col">foto url</th>
                        <th scope="col">Quantidade</th>
                        <th scope="col">id categoria</th>
                        <th scope="col">id funcionário</th>
                        <th scope="col">Botões</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.id_prod)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.nome_prod)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.valor_unitario)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ft_prod)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.quant)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.id_categoria)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.id_func)
                            </td>

                            <td>
                                @Html.ActionLink("Editar", "Atualizar", new { Id = item.id_prod }, new { @class = "add-cart-lista" })
                                @Html.ActionLink("Excluir", "ExcluirProd", new { id = item.id_prod }, new { @class = "add-cart-lista", onclick = "return confirm('Deseja excluir?');" })

                            </td>
                        </tr>
                    }


                </tbody>
            </table>
        </div>
    </main>



</body>
</html>