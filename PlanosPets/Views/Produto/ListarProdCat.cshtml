@model IEnumerable<bibliotecaModel.ModelProduto>

<title>4Lucky - Catálogo</title>
<link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<link rel="stylesheet" href="~/assets/css/catalogo.css">
<link rel="stylesheet" href="~/assets/css/glider.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
<html>
<body>
    <main>

        <section class="info-catalogo">
            <h1 class="titulo-catalogo">Produtos para gatos</h1>
            <p class="desc-catalogo">
                Produtos para gatos dês de ração até brinquedos e pestiscos
            </p>
        </section>
        <section class="shop container">
            <!-- Content -->
            <div class="shop-content">
                @foreach (var item in Model)
                {

                    <!-- Box 1 -->
                    <div class="product-box" >
                        <a href="/Home/Detalhes/@item.id_prod">
                            @if (@item.ft_prod != null)
                            {<img class="product-image" style="width: 266px; height: 280px;" src="@item.ft_prod" data-holder-rendered="true">}
                            else
                            {<img class="product-image" src="~/Images/image-not-found.jpg" data-holder-rendered="true">}
                        </a>
                        <h2 class="product-title">@item.desc_prod</h2>
                        <span class="price">R$ @item.valor_unitario</span>
                        @using (Html.BeginForm("AdicionarCarrinho", "Carrinho", FormMethod.Post))
                        {
                            <input type="hidden" name="id" value=@item.id_prod>
                            <input type="hidden" name="pre" value=@item.valor_unitario>
                            <input type="hidden" name="quantidade" value="1">
                            <button type="submit" class=" add-cart">Adicionar ao carrinho</button>
                        }

                    </div>
                }


            </div>
        </section>
    </main>

</body>
</html>