@model bibliotecaModel.ModelCliente

<title>Perfil</title>
<link rel="stylesheet" href="~/assets/css/header-cliente.css">
<link rel="stylesheet" href="~/assets/css/perfil-cliente3.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
<html>
<body class="body">
    <section class="dados-cliente container">
        <div class="foto-nome">
            <img class="foto-cliente" src="~/assets/images/gato-plano1.svg" alt="">
            <h3 class="nome-cliente-perfil"> @Html.DisplayFor(model => model.nome_cli, new { @style = "font-size:20px;" })</h3>
        </div>
        <section class="informacao-cliente">
            <H1 class="titulo-perfil">Perfil</H1>
            <div class="perfil container col-12">

                @Html.TextBoxFor(model => model.email_cli, new { @id = "e-mail", @class = "inp col-6", placeholder = "E-mail", @type = "email" })

                @Html.TextBoxFor(model => model.nasc_cli, new { @class = "inp col-5", placeholder = "Data de Nascimento", @type = "text" })

                @Html.TextBoxFor(model => model.senha_cli, new { @id = "", @class = "inp col-6", placeholder = "Senha", @type = "password" })

                @Html.TextBoxFor(model => model.CPF_cli, new { @class = "inp col-5", placeholder = "CPF", @type = "text" })
            </div>

            <h3 class="titulo-endereço">
                Endereço
            </h3>
            <div class="endereco container">
                @Html.TextBoxFor(model => model.cep_cli, new { @class = "inp col-3", placeholder = "CEP", @type = "text" })
                @Html.TextBoxFor(model => model.logradouro_cli, new { @class = "inp col-6", placeholder = "Rua", @type = "text" })
                @Html.TextBoxFor(model => model.num_cli, new { @class = "inp col-2", placeholder = "N°", @type = "text" })
            </div>
        </section>
    </section>
    <div style="display:flex;justify-content:center;">
        @Html.ActionLink("Atualizar meus dados", "Atualizar", new { area = "" }, new { @class = "meus-pets", email = Model.email_cli, style = "margin-left:20px;margin-bottom:50px;" })
        @Html.ActionLink("Meus pets", "ListarPet", new { area = "" }, new { @class = "meus-pets", style = "margin-left:20px;margin-bottom:50px;" })
        @Html.ActionLink("Cadastrar pet", "Cadastrar", "Pets", new { area = "" }, new { @class = "meus-pets", style = "margin-left:20px;margin-bottom:50px;" })
        @Html.ActionLink("Logout", "Login", "Login/Logout", new { area = "" }, new { @class = "meus-pets", style = "margin-left:20px;margin-bottom:50px;" })

    </div>
</body>
</html>



