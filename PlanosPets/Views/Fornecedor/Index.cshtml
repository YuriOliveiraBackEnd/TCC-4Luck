@model IEnumerable<bibliotecaModel.ModelFornecedor>

@{
    if (Session["Funclogado"] != null)
    {
        Layout = "~/Views/Shared/_LayoutFunc.cshtml";
    }


}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="./assets/css/lista2.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
    <title>Lista Pet</title>

</head>
<body>
    <main>
        <table class="col table table-striped table-responsive table-bordered table-sm" style="margin-bottom:300px;">
            <h1 class="titulo-tabela" style="margin-top:100px;">Lista de Fornecedores</h1>
            <p>
                @Html.ActionLink("Adicionar", "Cadastrar", new { area = "" }, new { @class = "add-cart-lista" })
            </p>

            <thead>
                <tr>
                    <th scope="col">ID </th>
                    <th scope="col" width="212px">Nome</th>
                    <th scope="col">CNPJ</th>
                    <th scope="col">Telfone</th>
                    <th scope="col">ID Produto</th>
                    <th scope="col">Botões</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>

                        <td>
                            @Html.DisplayFor(modelItem => item.id_forn)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.nome_forn)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CNPJ_forn)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.tel_forn)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.id_prod)
                        </td>
                        <td>
                            @Html.ActionLink("Editar", "Atualizar", new { Id = item.id_forn }, new { @class = "add-cart-lista" })
                            @Html.ActionLink("Detalhes", "Detalhes", new { Id = item.id_forn }, new { @class = "add-cart-lista" })
                            @Html.ActionLink("Excluir", "ExcluirForn", new { id = item.id_forn }, new { @class = "add-cart-lista", onclick = "return confirm('Deseja excluir?');" })

                        </td>
                    </tr>
                }


            </tbody>
        </table>
    </main>



</body>
</html>