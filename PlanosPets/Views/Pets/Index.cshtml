@model IEnumerable<bibliotecaModel.ModelCliente>

@{
    if (Session["Funclogado"] != null)
    {
        Layout = "~/Views/Shared/_LayoutFunc.cshtml";
    }

}



<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="./assets/css/lista2.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
    <title>Lista Pet</title>

</head>
<body>
    <main>
        <table class="col table table-striped table-responsive table-bordered table-sm" style="margin-bottom:300px;">
            <h1 class="titulo-tabela" style="margin-top:100px;">Lista de Pets</h1>
           
            <thead>
                <tr>
                    <th scope="col">ID </th>
                    <th scope="col">Nome</th>
                    <th scope="col">RGA</th>
                    <th scope="col">Id cliente</th>
                    <th scope="col">Id Raça</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>

                        <td>
                            @Html.DisplayFor(modelItem => item.id_pet)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.nome_pet)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RGA)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.id_cli)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.id_raca)
                        </td>
                    </tr>
                }


            </tbody>
        </table>
    </main>
    </body>
</html>
