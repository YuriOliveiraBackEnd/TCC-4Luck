@model IEnumerable<bibliotecaModel.ModelCategorias>

@{
    if (Session["Funclogado"] != null)
    {
        Layout = "~/Views/Shared/_LayoutFunc.cshtml";
    }
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/assets/css/lista2.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
    <title>Lista Pet</title>

</head>
<body>
    <main>
        <table class="col table table-striped table-responsive table-bordered table-sm" style="margin-bottom:300px;width:814px">
            <h1 class="titulo-tabela" style="margin-top:100px;">Lista de Categorias</h1>
            <p>
                @Html.ActionLink("Adicionar", "Cadastrar", new {area = "" }, new {@class = "add-cart-lista" })
            </p>
            <thead>
                <tr>
                    <th scope="col" >ID </th>
                    <th scope="col"  >Categoria</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.desc_categoria)</th>
                    <th scope="col" style="width:192px">Botões</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>

                        <td>
                            @Html.DisplayFor(modelItem => item.id_categoria)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.nome_categoria)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.desc_categoria)
                        </td>
                        <td>
                            @Html.ActionLink("Atualizar", "Atualizar", new { id = item.id_categoria } , new { @class = "add-cart-lista", style = "margin-left:10px;" })
                            @Html.ActionLink("Excluir", "ExcluirCat", new { id = item.id_categoria }, new { @class = "add-cart-lista", onclick = "return confirm('Deseja excluir?');" ,style = "margin-right:10px;"})
                        </td>
                    </tr>
                }


            </tbody>
        </table>
    </main>

 

</body>
</html>
