<!DOCTYPE html>
<html>
<head>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewBag.Title - Meu Aplicativo ASP.NET</title>
        <link href="~/Content/bootstrap-chosen.css" rel="stylesheet" />
        <link href="~/assets/css/style3.css" rel="stylesheet" />
        <link rel="stylesheet" href="~/assets/css/header-funcionario.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
        <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
        <link rel="stylesheet" href="~/assets/css/glider.css">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">

        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <nav>
            <div class="nav-bar">
                <i class="bx bx-menu sidebarOpen"></i>
                <div class="logo">
                    <img class="imagem-logo" src="~/assets/images/logo-branca.svg">
                </div>
                <div class="menu">
                    <div class="logo-toggle">
                        <i class="bx bx-x siderbarClose"></i>
                    </div>
                    <ul class="nav-links">
                        <li>@Html.ActionLink("Inicio", "IndexFunc", "Home", new { area = "" }, new { @class = "listanav" })</li>
                        <li>@Html.ActionLink("categoria", "Index", "Categoria", new { area = "" }, new { @class = "listanav" })</li>
                        <li>@Html.ActionLink("cliente", "Index", "CLiente", new { area = "" }, new { @class = "listanav" })</li>
                        <li>@Html.ActionLink("produto", "ListaProduto", "Produto", new { area = "" }, new { @class = "listanav" })</li>
                        <li>@Html.ActionLink("funcionário", "Index", "Funcionario", new { area = "" }, new { @class = "listanav" })</li>
                        <li>@Html.ActionLink("fornecedor", "Index", "Fornecedor", new { area = "" }, new { @class = "listanav" })</li>
                        <li>@Html.ActionLink("Pets", "Index", "Pets", new { area = "" }, new { @class = "listanav" })</li>
                        <li>@Html.ActionLink("Raça", "Index", "Raca", new { area = "" }, new { @class = "listanav" })</li>
                        <li>@Html.ActionLink("Aréa_Cliente", "Index", "Home", new { area = "" }, new { @class = "listanav" })</li>

                    </ul>
                </div>
                <div class="darkLight-searchBox">
                    <div class="dark-light">
                        <i class="bx bx-moon moon"></i>
                        <i class="bx bx-sun sun"></i>
                    </div>
                    <div class="searchBox">
                        <div class="searchToggle">
                            <i class="bx bx-x cancel"></i>
                            <i class="bx bx-search search"></i>
                        </div>
                        <div class="search-field">
                            <input type="text" placeholder="Search...">
                            <i class="bx bx-search"></i>
                        </div>
                    </div>
                    @if (Session["FuncLogado"] != null)
                    {
                        <div class="botao-login">
                            <a href="/Funcionario/DetalhesEmail/">
                                <i class='fa-solid fa-user' id="login-icon"></i>
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="botao-login">
                            <a href="/Login/Login/">
                                <i class='fa-solid fa-user' id="login-icon"></i>
                            </a>
                        </div>
                    }
                </div>
            </div>
            </div>

            </div>


        </nav>








        @RenderBody()
        <footer>
            <!--content onde vão ficar todas informações-->
            <div id="footer_content">

                <!--contacts onde vão ficar todas informações de redes sociais e logo com slogan-->
                <div id="footer_contacts">
                    <div class="logo-footer">
                        <a href="/" class="logo-rodape"><img src="~/assets/images/logo-branca.svg" /></a>
                    </div>
                    <p class="contato">contato@4luck.com.br</p>
                    <p class="contato">(11) 98888-4242</p>
                    <div id="footer_social_media">
                        <a href="#" class="footer-link" id="instagram">
                            <i class="fa-brands fa-instagram fa-2xl" style="color: #58f995;"></i>
                        </a>

                        <a href="#" class="footer-link" id="facebook">
                            <i class="fa-brands fa-facebook fa-2xl" style="color: #58f995;"></i>
                        </a>

                        <a href="#" class="footer-link" id="whatsapp">
                            <i class="fa-brands fa-whatsapp fa-2xl" style="color: #58f995;"></i>
                        </a>
                    </div>
                </div>

                <!-- list onde vão ficar tudo de importante no footer-->

                <ul class="footer-list">
                    <li>
                        <h3>Nossos Planos</h3>
                    </li>
                    <li>
                        <a href="#" class="footer-link">Plano Básico</a>
                    </li>
                    <li>
                        <a href="#" class="footer-link">Plano Regular</a>
                    </li>
                    <li>
                        <a href="#" class="footer-link">Plano Plus</a>
                    </li>
                </ul>
                <ul class="footer-list">
                    <li>
                        <h3>Informações</h3>
                    </li>
                    <li>
                        <a href="#" class="footer-link">Institucional</a>
                    </li>
                    <li>
                        <a href="#" class="footer-link">Politica de Privacidade</a>
                    </li>
                    <li>
                        <a href="#" class="footer-link">Termos de Uso</a>
                    </li>
                    <li>
                        <a href="#" class="footer-link">Contato</a>
                    </li>
                    <li>
                        <a href="#" class="footer-link">SAC</a>
                    </li>
                </ul>
            </div>
            <!--copyright-->
            <div id="footer_copyright">
                &#169
                2023 all rights reserved
            </div>
        </footer>
        <script src="~/assets/js/header.js"></script>
        <script src="~/assets/js/catalogo.js"></script>
        <script src="~/assets/js/glider.js"></script>
        <script src="~/assets/js/slides-produto.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
        <script src="~/Scripts/chosen.jquery.js"></script>
    </body>
</html>





